{
    "name": "blockchain-workshop",
    "description": "",
    "license": "MIT",
    "author": "",
    "homepage": "",
    "version": "0.0.1",
    "main": "dist/js/src/HeadTail.js",
    "files": [
        "dist/js/build",
        "dist/js/src"
    ],
    "directories": {
        "test": "test"
    },
    "scripts": {
        "build": "yarn build:contracts && yarn build:ts",
        "build:contracts": "truffle compile && yarn typechain",
        "build:ts": "tsc -b tsconfig.build.json --verbose --pretty",
        "clean": "shx rm -rf dist build",
        "extractABI": "node ./scripts/extractABI.js",
        "start": "ts-node src/HeadTail.ts",
        "start:ganache": "ganache-cli -q -m 'chalk park staff buzz chair purchase wise oak receive avoid avoid home' -l 8000000 -e 1000000 -a 20 -g 0",
        "test": "mocha -r ts-node/register src/test/*.test.ts --timeout 60000 --exit",
        "test:contracts": "yarn test:concurrent",
        "typechain": "shx rm -rf src/types && typechain --target web3-v1 --outDir src/types 'build/contracts/*.json'",
        "prettier": "prettier --write --config-precedence file-override './src/**/*'"
    },
    "types": "dist/js/src/index.d.ts",
    "dependencies": {
        "@openzeppelin/contract-loader": "0.6.1",
        "web3": "1.2.5",
        "web3-core": "1.2.5",
        "web3-eth-contract": "1.2.5"
    },
    "devDependencies": {
        "@openzeppelin/cli": "2.6.0",
        "@openzeppelin/contracts-ethereum-package": "2.4.0",
        "@openzeppelin/upgrades": "2.6.0",
        "@types/chai": "4.2.8",
        "@types/dotenv": "8.2.0",
        "@types/mocha": "5.2.7",
        "@types/node": "12.12.26",
        "@typescript-eslint/eslint-plugin": "2.18.0",
        "@typescript-eslint/parser": "2.18.0",
        "chai": "4.2.0",
        "cross-env": "7.0.0",
        "dotenv": "8.2.0",
        "eslint": "6.8.0",
        "eslint-config-airbnb-base": "14.0.0",
        "eslint-config-prettier": "6.10.0",
        "eslint-plugin-import": "2.20.0",
        "eslint-plugin-prettier": "3.1.2",
        "ethlint": "1.2.5",
        "fs-extra": "8.1.0",
        "ganache-cli": "6.8.2",
        "mocha": "7.0.1",
        "moment": "2.24.0",
        "prettier": "1.19.1",
        "shx": "0.3.2",
        "solc": "0.5.16",
        "truffle": "5.1.10",
        "ts-node": "8.6.2",
        "typechain": "1.0.4",
        "typechain-target-web3-v1": "1.0.4",
        "typescript": "3.7.5"
    },
    "engines": {
        "node": "12"
    }
}
